<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marvin.kanbaapp.MainTab03">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:background="@drawable/pink2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ibDenglu1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/junzi"
                app:civ_border_width="0.5dp"
                app:civ_border_color="#4a9bec"
                android:layout_weight="0.87"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px">

            <ImageView
                android:layout_gravity="left|center"
                android:layout_marginLeft="40px"
                android:background="#ffffff"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/l1"
                android:id="@+id/imageButton2" />

            <TextView
                android:paddingLeft="10dp"
                android:text="联系看吧"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/textView5"
                android:layout_weight="1" />

            <ImageButton
                android:paddingRight="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:src="@drawable/more"
                android:id="@+id/imageButton3" />
        </LinearLayout>

        <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/linearLayout1"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="80px"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="left|center"
                android:layout_marginLeft="40px"
                android:background="#ffffff"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/comments"
                android:id="@+id/ibLookup" />

            <TextView
                android:paddingLeft="10dp"
                android:text="我的评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/tv1"
                android:layout_weight="1" />

            <ImageButton
                android:layout_gravity="center"
                android:paddingRight="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:src="@drawable/more"
                android:id="@+id/ibLookupCon" />
        </LinearLayout>

        <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout3"
            android:id="@+id/linearLayout4"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_gravity="left|center"
                android:layout_marginLeft="40px"
                android:background="#ffffff"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/information"
                android:id="@+id/ibAbout" />

            <TextView
                android:paddingLeft="10dp"
                android:text="关于我们"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/tv2"
                android:layout_weight="1" />

            <ImageButton
                android:layout_gravity="center"
                android:paddingRight="30px"
                android:layout_width="wrap_content"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                android:id="@+id/ibAboutus" />
        </LinearLayout>

        <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout5"

            android:layout_below="@+id/linearLayout4"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_gravity="left|center"
                android:layout_marginLeft="40px"
                android:background="#ffffff"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/security"
                android:id="@+id/ibChange" />

            <TextView
                android:text="修改密码"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/tv4"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:paddingRight="30px"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/more"
                android:id="@+id/ibChangePassword" />
        </LinearLayout>

        <Button
            android:text="退出登录"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout5"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btExit" />


    </RelativeLayout>

</FrameLayout>
